{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata"],
  "properties": {
    "apiVersion": {"type": "string", "enum": ["v1"], "default": "v1"},
    "kind": {"type": "string", "enum": ["Secret"], "default": "Secret"},
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {"type": "string"},
        "namespace": {"type": "string", "default": "default"},
        "labels": {"$ref": "#/definitions/keyValuePairs"}
      }
    },
    "data": {"type": "object", "additionalProperties": {"type": "string"}},
    "type": {"type": "string", "enum": ["Opaque", "kubernetes.io/tls", "kubernetes.io/dockerconfigjson"], "default": "Opaque"}
  },
  "definitions": {"keyValuePairs": {"type": "object", "additionalProperties": {"type": "string"}}}
}