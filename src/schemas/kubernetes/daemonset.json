{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {"type": "string", "enum": ["apps/v1"], "default": "apps/v1"},
    "kind": {"type": "string", "enum": ["DaemonSet"], "default": "DaemonSet"},
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {"type": "string"},
        "namespace": {"type": "string", "default": "default"},
        "labels": {"$ref": "#/definitions/keyValuePairs"}
      }
    },
    "spec": {
      "type": "object",
      "required": ["selector", "template"],
      "properties": {
        "selector": {
          "type": "object",
          "required": ["matchLabels"],
          "properties": {"matchLabels": {"$ref": "#/definitions/keyValuePairs"}}
        },
        "template": {
          "type": "object",
          "required": ["metadata", "spec"],
          "properties": {
            "metadata": {"type": "object", "properties": {"labels": {"$ref": "#/definitions/keyValuePairs"}}},
            "spec": {
              "type": "object",
              "required": ["containers"],
              "properties": {
                "containers": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["name", "image"],
                    "properties": {
                      "name": {"type": "string"},
                      "image": {"type": "string"},
                      "ports": {"type": "array", "items": {"type": "object", "properties": {"containerPort": {"type": "integer"}}}}
                    }
                  }
                }
              }
            }
          }
        },
        "updateStrategy": {
          "type": "object",
          "properties": {"type": {"type": "string", "enum": ["RollingUpdate", "OnDelete"], "default": "RollingUpdate"}}
        }
      }
    }
  },
  "definitions": {"keyValuePairs": {"type": "object", "additionalProperties": {"type": "string"}}}
}